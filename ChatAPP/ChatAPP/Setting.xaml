<Window x:Class="ChatAPP.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAPP"
        mc:Ignorable="d"
        Title="Setting" Height="200" Width="200">
    <Grid Background="Black">
        <Label HorizontalAlignment="Center" Foreground="White" >تغییر رنگ برنامه </Label>
        <StackPanel Margin="0,40,0,0" HorizontalAlignment="Center">
            <Label  HorizontalAlignment="Center" Foreground="White">کد رنگ خود را وارد کنید (#HEX)</Label>
            <TextBox Name="txtCode" MaxLength="7" FontSize="22" Text="#" Margin="0,10,0,0" Height="30" HorizontalAlignment="Center" Width="100"></TextBox>
            <Button HorizontalAlignment="Center" Margin="0,5,0,0" Background="Black" Foreground="White" Click="Button_Click">Save</Button>
        </StackPanel>
    </Grid>
</Window>
